<div class="row-fluid">
  <div class="span4 well">
<%=semantic_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <%=f.semantic_errors%>
    
    <%= f.inputs do %>
    	<%= f.input :email%>
    	<%= f.input :password%>
    <%end%>
    
	<%= f.actions do %>
  		<%= f.action :submit, :as => :button %>  
	<%end%>
<%end%>
</div>
</div>
